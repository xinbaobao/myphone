<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context="com.zzptc.zhongxin.myphone.fragment.SpeedUpFragment">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金山词霸"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存占用：4.6MB"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="18dp"/>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/tv_size"
        >

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用详情"
            android:textSize="16dp"
            android:textColor="#1545a4"
            android:drawableLeft="@mipmap/app_detail"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_whitelist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入白名单"
            android:textSize="16dp"
            android:textColor="#1545a4"
            android:drawableLeft="@mipmap/add_white_list"
            android:padding="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="取消"
            android:textColor="#1545a4"
            android:textSize="20dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btn_clean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1545a4"
            android:text="清理"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

</RelativeLayout>
