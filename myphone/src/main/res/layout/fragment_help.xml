<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzptc.zhongxin.myphone.fragment.HelpFragment"
    android:background="#1545a4">

    <ImageView
        android:id="@+id/iv_tu1"
        android:layout_width="360dp"
        android:layout_height="264dp"
        android:src="@mipmap/one_key_help_bear"
        android:layout_below="@id/tb_family"
        />


    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="危急时刻，瞬间求救"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        android:layout_below="@id/iv_tu1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定紧急联系人快速求救"
        android:layout_below="@id/tv_text1"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/btn_help"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="开启一键求救"
        android:layout_below="@id/tv_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />


</RelativeLayout>
